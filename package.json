{
  "name": "tronscan-notifier",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development NODE_TLS_REJECT_UNAUTHORIZED=0 electron .",
    "build": "electron-builder --win --publish never"
  },
  "keywords": [
    "electron",
    "telegram",
    "tronscan",
    "crypto",
    "monitor"
  ],
  "author": {
    "name": "Kelvin Nguyen",
    "url": "https://github.com/kelvinNguyen",
    "email": "kelvinNguyen@gmail.com"
  },
  "license": "ISC",
  "description": "Electron app to monitor Tron transactions and send Telegram notifications",
  "dependencies": {
    "fs": "^0.0.1-security",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.kelvinNguyen.tronscanbot",
    "productName": "Bot Notification",
    "icon": "public/logo.png",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bot Notification"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb",
      "maintainer": "Kelvin Nguyen"
    }
  }
}